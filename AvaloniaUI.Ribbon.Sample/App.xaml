        <StyleInclude Source="avares://AvaloniaUI.Ribbon/Themes/Default/AvaloniaRibbon.xaml" /-->


        <FluentTheme Mode="Light"/>
        <StyleInclude Source="avares://AvaloniaUI.Ribbon/Themes/Fluent/AvaloniaRibbon.xaml" />
    </Application.Styles>
